void insertionSort(int * arr, int size) { //ALGORITMO DE ORDENAMIENTO TIPO SORT
    for (int i = 1; i < size; ++i) {
        int key = arr[i];
        int j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j = j - 1;
        }

        arr[j + 1] = key;
    }
    for(int x=0; x<size; x++){
        cout << arr[x];
    }
}
